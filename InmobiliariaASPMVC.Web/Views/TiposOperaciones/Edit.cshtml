@model InmobiliariaASPMVC.Entidades.ViewModels.TipoOperacion.TipoOperacionEditViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Desea Editar el Tipo de Operacion?</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.TipoOperacionId)


    <div class="form-group">
        @Html.LabelFor(model => model.DescripcionTO, htmlAttributes: new { @class = "control-label col-md-2" })
        @Html.EditorFor(model => model.DescripcionTO, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.DescripcionTO, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-warning" />
            @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-success" })
        </div>
    </div>
</div>
}

