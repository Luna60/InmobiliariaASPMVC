@model InmobiliariaASPMVC.Entidades.ViewModels.Localidad.LocalidadEditViewModel

@{
    ViewBag.Title = "Edit";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.LocalidadId)

<div class="form-horizontal">
    <h4>Desea editar la Localidad?</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="form-group">
        @Html.LabelFor(model => model.NombreLocalidad)
            @Html.EditorFor(model => model.NombreLocalidad, new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.NombreLocalidad, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProvinciaId)
        @Html.DropDownListFor(model => model.ProvinciaId, new SelectList(Model.Provincia, "ProvinciaId", "NombreProvincia"),
        " Seleccione una Provincia ", new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.ProvinciaId, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Guardar" class="btn btn-primary" />
            @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-success" })
        </div>
    </div>
</div>
}
