@model InmobiliariaASPMVC.Entidades.ViewModels.Provincia.ProvinciaEditViewModel

@{
    ViewBag.Title = "Delete";
}

@*<h2>Delete</h2>*@

<h3>Desea borrar esta Provincia?</h3>
<div>
    @*<h4>ProvinciaEditViewModel</h4>*@
    <hr />
    <dl class="dl-horizontal">

        <dt>
            @Html.DisplayNameFor(model => model.NombreProvincia)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.NombreProvincia)
        </dd>

    </dl>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @*////Forma de reservar el id Provincia en la Vista, hay que recordar que esto viene todo lleno
            ////y cuando vuelve al servidor, el estado lo pierde, entonces yo debo reservar el Id de Provincia,
            ////eso lo logro mediante un HiddenFor..*@
        @Html.HiddenFor(model => model.ProvinciaId)
        @*//Los Hidden son campos ocultos, entonces reservo esto,
            //para despues tenerlo alla, y si quiera que el modelo
            //este completo, tambien podria hacer un Hidden de NombreProvincia.*@

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-danger" /> |
            @Html.ActionLink("Volver", "Index", "", new { @class = "btn btn-success" })
        </div>
    }
</div>
