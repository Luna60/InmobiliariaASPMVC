@model IEnumerable<InmobiliariaASPMVC.Entidades.ViewModels.Provincia.ProvinciaListViewModel>

@{
    ViewBag.Title = "Index";
}

<div>

    <a href="@Url.Action("Create","Provincias")" class="btn btn-primary" style="float:right">Nuevo</a>
    <h2>Lista de Provincias</h2>
    @*<a href="@Url.Action("Create","Provincias")">Nuevo</a>*@@*otra forma de poner el boton nuevo, pero sin recuadro*@
    @*<a href="#" class="btn btn-primary" style="float:right">Nuevo</a>*@@*otra forma*@

</div>
<hr />
@*con este bloque logro que aparesca el mensaje de Exito, luego de Agregar una Provincia*@

@if (TempData["Msg"] != null)
{
    var msg = TempData["Msg"].ToString();
    <div class="alert alert-sucess alert-dismisible">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Exito! </strong>@msg
    </div>
}
<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.NombreProvincia)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NombreProvincia)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ProvinciaId }, new { @class = "btn btn-warning" }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.ProvinciaId }, new { @class = "btn btn-info" }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.ProvinciaId }, new { @class = "btn btn-danger" })
            </td>
        </tr>
    }

</table>
